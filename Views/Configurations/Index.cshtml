@model IEnumerable<BddFindCulpritTool.Models.Configuration>

@if (!Model.Any())
{
    <p>
        <div class="text-danger m-lg-3">Not Configured. Please Enter a Valid backend path!</div>
    </p>
}

@if (ViewBag.pathValidated == false)
{
    <div>Path could not be validated. Please enter a correct Directory.</div>
}

<form asp-action="Update" asp-route-id="1">
    <div class="form-group col-md-7">
        <label name="BackEndPath" class="control-label">MobiControl Backend folder:</label>
        <input name="BackEndPath" class="form-control" />
    </div>
    <div class="form-group m-lg-3">
        <input type="submit" value="Update" class="btn btn-primary" Checked="checked"/>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BackendPath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BackendPath)
            </td>
        </tr>
}
    </tbody>
</table>
